<!-- カテゴリとランキングはrender -->


<!-- 一覧部分 -->
<h2>タイムライン</h2>
<table class="">
  <thead>
    <tr>
      <th class="">タイトル</th>
      <th class="">詳細</th>
      <th class="">コメント数</th>
    </tr>
  </thead>
  <tbody>
    <% @sweets.each do |sweet| %>
    <tr>
      <td>
        <%= link_to sweet.name, sweet_path(sweet.id) %>
      </td>
      <td><%= sweet.opinion %></td>
      <td><%= sweet.sweet_comments.count %>件</td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "＋", new_sweet_path %>