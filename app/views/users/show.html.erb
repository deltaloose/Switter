<div class="sweet-body">
  <h2><%= @user.name %></h2>
  <h3><%= @user.email %></h3>
  <%= attachment_image_tag @user, :user_image, format: 'jpeg', fallback:"no_image2.jpg", class: "img" %>
  <p>Favorite</p>
  <% if user_signed_in? %>
    <% if @sweet.user == current_user %>
      <%= link_to "Edit", edit_user_path(current_user) %>
    <% end %>
  <% else %>
  <% end %>
</div>